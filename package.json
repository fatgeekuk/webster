{
  "name": "webster",
  "version": "0.1.0",
  "description": "Web based music streaming application",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "test",
    "build:js": "browserify assets/scripts/main.js > dist/main.js",
    "watch:js": "watch 'npm run build:js' assets/scripts/",
    "build:css": "node-sass frontend/styles/index.scss -o frontend/_dist",
    "watch:css": "watch 'npm run build:css' frontend/styles/",
    "build:html": "jade frontend/html/index.jade -o frontend/_dist",
    "watch:html": "watch 'npm run build:html' frontend/html",
    "build": "npm run build:js && npm run build:css && npm run build:html",
    "build:watch": "parallelshell 'npm run watch:js' 'npm run watch:css' 'npm run watch:html'",
    "serve": "serve frontend/_dist",
    "start": "parallelshell 'npm run serve' 'npm run watch:html' 'npm run watch:css'"
  },
  "keywords": [
    "music",
    "streaming",
    "s3"
  ],
  "devDependencies": {
    "jade": "latest",
    "browserify": "latest",
    "watch": "latest",
    "parallelshell": "latest",
    "serve": "latest",
    "node-sass": "latest"
  },
  "author": "Peter R Morris",
  "license": "ISC"
}
